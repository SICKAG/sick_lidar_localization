<?xml version="1.0"?>
<package format="3">
  <name>sick_lidar_localization_driver</name>
  <version>0.0.0</version>
  <description>sick_lidar_localization_driver is an open-source project to support the LiDAR-LOC software of the company SICK</description>

  <!-- One maintainer tag required, multiple allowed, one person per tag -->
  <maintainer email="ros.test@lehning.de">rostest</maintainer>

  <!-- One license tag required, multiple allowed, one license per tag -->
  <!-- Commonly used license strings: -->
  <!--   BSD, MIT, Boost Software License, GPLv2, GPLv3, LGPLv2.1, LGPLv3 -->
  <license>Apache</license>

  <!-- Url tags are optional, but multiple are allowed, one per tag -->
  <!-- Optional attribute type can be: website, bugtracker, or repository -->
  <url type="website">https://github.com/michael1309/sick_lidar_localization</url>

  <!-- Author tags are optional, multiple are allowed, one per tag -->
  <!-- Authors do not have to be maintainers, but could be -->
  <author email="ros.test@lehning.de">Michael Lehning</author>

  <!-- The *depend tags are used to specify dependencies -->
  
  <buildtool_depend>ament_cmake</buildtool_depend>
  <build_depend>rosidl_default_generators</build_depend>

  <depend>geometry_msgs</depend>
  <depend>nav_msgs</depend>
  <depend>sensor_msgs</depend>
  <depend>std_msgs</depend>
  <depend>tf2</depend>
  <depend>tf2_ros</depend>
  <depend>visualization_msgs</depend>
  <depend>sick_lidar_localization_msgs</depend>

  <test_depend>ament_lint_auto</test_depend>
  <test_depend>ament_lint_common</test_depend>

  <export>
    <build_type>ament_cmake</build_type>
  </export>   

</package>
